<!DOCTYPE html>
<html>
    <meta charset="UTF-8">
      <title>Login</title>
      <%- include("includes/head") %>  
      <body>        
     <%- include("includes/header") %>  
      <img class="banner" src="/img/img-home-banner.jpg">
      <main class="main-login">
        <p class="mensaje-inicio">Crea Tu Cuenta</p>
        <form action="/access" method="POST">
          <section class="nombre">
          <label for="nombre">
          <input type="text" placeholder="Nombre y apellido" name="nombre" id="nombre">
          </label>
          </section>

          <section class="usuario">
          <label for="Usuario">
          <input type="text" placeholder="Nombre de Usuario" name="usuario" id="usuario">
          </label>
          </section>

          <section class="email">
          <label for="email">
          <input type="email" placeholder="Email "name="email" id="email">
          </label>
          </section>

          <h1>Fecha de Nacimiento</h1>
          <section class="fecha">
          <label for="fecha"></label>
          <input type="date" name="fecha" id="fecha">
          </label>
          </section>
          <section class="domicilio">
          <label for="domicilio">
          <input type="text" placeholder="Domicilio" name="domicilio" id="domicilio">
          </label>
          </section>

          <h2>Perfil De Usuario</h2>

          <section class="dato-perfil">
          <section class="comprador">
          <label>
          <input type="radio" name="dato-perfil" value="Comprador">Comprador
          </label>
          </section>
          <section class="vendedor">
          <label>
          <input type="radio" name="dato-perfil" value="Vendedor">Vendedor
          </label>
          </section>
          </section>

          <h3>Intereses</h3>

          <filedset class="intereses">
            <fieldset class="intereses2">
          <label>
            <input type="checkbox" name="interes" value="Electro" >Electro
          </label>
            </fieldset>
          <fieldset class="intereses2">
          <label>
            <input type="checkbox" name="interes" value="Hogar">Hogar
          </label>
          </fieldset>
          <fieldset class="intereses2">
          <label>
            <input type="checkbox" name="interes" value="Jugueteria">Jugueteria
          </label>
          </fieldset>
          <fieldset class="intereses2">
          <label>
            <input type="checkbox" name="interes" value="Visa sana">Vida sana
          </label>
          </fieldset>
        </filedset>

          <h4>Usuario</h4>

          <section >
          <label id="foto-de-perfil">
            <i class="far fa-user"></i><input type="file" id="foto-de-perfil2" accept=".png, .jpg">
          </label>
          </section>
          <fieldset class="password">
          <label>
            <input type="password" placeholder="Contraseña" name="password" id="password">
          </label>
          </fieldset>
          <fieldset class="confirm-password"> 
          <label>
            <input type="password" placeholder="Confirmar Contraseña" name="password" id="confirmPassword">
          </label>
          </fieldset>
          <label>
            <section class="button-enviar">
            <button type="submit" name="enviar" value="register">Enviar</button>
          </label>
            </section>
        <section class="button-reset">
          <label>
            <button type="reset" name="reset" value="reset">Reset</button>
          </label>
        </section>
        </form>
      </main> 
      <%- include("includes/footer") %> 
 </body>
</html>
